@{
    //ViewBag.Title = "Hakkımda";
    ViewBag.Name = "Nanami Sato"; <!-- Örnek bir isim -->
    ViewBag.Message = "Merhaba, ben Nanami Sato! Japonya'dan dünyayı keşfetmeye çıkmış bir gezginim. Yeni yerler görmek, farklı kültürleri tanımak ve diller öğrenmek benim tutkum. Seyahatlerimde çektiğim fotoğrafları burada paylaşarak, başkalarına ilham vermek istiyorum. Fotoğraflarım sadece bir anı yakalamak değil, aynı zamanda insanların farklı bakış açılarıyla dünyayı keşfetmesini sağlamak için bir yol. Her yeni keşif, beni biraz daha büyütüyor ve bu yolculukta sizlerle etkileşimde bulunmak beni çok heyecanlandırıyor. Eğer benimle birlikte dünya turuna çıkmak isterseniz, fotoğraflarıma yorum yapmayı unutmayın!";
    ViewBag.ProfileImage = "https://images.unsplash.com/photo-1740964169160-10f96dd960a3?q=80&w=1975&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"; <!-- Profil Resmi -->
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Genel Stil */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f3e9; /* Pastel arka plan */
            margin: 0;
            padding: 0;
            color: #2d3436;
        }

        /* Konteyner */
        .about-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 30px;
            margin-top: 50px;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Resim */
        .about-image img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%; /* Yuvarlak hale getirme */
            border: 4px solid #2980b9; /* Kenar rengi */
        }

        /* Metin */
        .about-text {
            max-width: 600px;
        }

            /* Başlık */
            .about-text h3 {
                font-size: 1.8em;
                color: #2d3436;
            }

            /* Paragraf */
            .about-text p {
                color: #636e72;
                font-size: 1.1em;
                line-height: 1.6;
            }

        /* Başlık Stili */
        h2 {
            text-align: center;
            font-size: 2em;
            color: #2980b9;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <main aria-labelledby="title">
        <h2 id="title">@ViewBag.Title</h2>
        <div class="about-container">
            <div class="about-image">
                <img src="@ViewBag.ProfileImage" alt="Profile Image">
            </div>
            <div class="about-text">
                <h3>@ViewBag.Name</h3>
                <p>@ViewBag.Message</p>
            </div>
        </div>
    </main>

</body>
</html>
